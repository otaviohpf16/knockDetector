<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/mainLL" android:background="@color/reni" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/result" android:id="@+id/coolantTxt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="3dp" android:text="Coolant:" android:layout_weight="1"/>
        <TextView android:textSize="30dp" android:textStyle="bold" android:textColor="@color/result" android:id="@+id/coolantTV" android:layout_width="50dp" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:text="10" android:layout_weight="5"/>
        <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/result" android:id="@+id/airTxt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="3dp" android:text="Intake:" android:layout_weight="1"/>
        <TextView android:textSize="30dp" android:textStyle="bold" android:textColor="@color/result" android:id="@+id/airTV" android:layout_width="50dp" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:text="10" android:layout_weight="5"/>
    </LinearLayout>
    <ImageView android:id="@+id/iv" android:background="@drawable/imageback" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/ki1" android:scaleType="fitXY" android:adjustViewBounds="true"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/result" android:id="@+id/throttle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="2dp" android:text="Throttle" android:maxLines="1" android:lines="1" android:layout_weight="1"/>
        <ProgressBar android:id="@+id/tp" android:layout_width="60dp" android:layout_height="30dp" android:layout_marginTop="3dp" android:layout_marginRight="8dp" android:layout_marginBottom="3dp" android:max="100" android:progress="10" android:progressDrawable="@drawable/progressback" android:layout_weight="10" style="?android:attr/progressBarStyleHorizontal"/>
        <TextView android:textSize="26dp" android:textStyle="bold" android:textColor="@color/result" android:id="@+id/percents" android:layout_width="40dp" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:text="10%" android:maxLines="1" android:lines="1" android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent">
        <Button android:textSize="22dp" android:id="@+id/resultsBtn" android:background="@drawable/button_selector" android:layout_width="110dp" android:layout_height="45dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="More info"/>
        <Button android:textSize="22dp" android:id="@+id/restartBtn" android:background="@drawable/button_selector" android:layout_width="140dp" android:layout_height="45dp" android:layout_marginLeft="30dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="Test again"/>
    </LinearLayout>
</LinearLayout>
