<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nosoftskills.kd"
    android:versionCode="3"
    android:versionName="1.1.0">

    <uses-sdk android:minSdkVersion="21" android:targetSdkVersion="35"/>

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <queries>
        <package android:name="org.prowl.torque" />
        <intent>
            <action android:name="org.prowl.torque.remote.ITorqueService" />
        </intent>
    </queries>

    <application
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:label="@string/app_name"
        android:icon="@drawable/logo"
        android:allowBackup="true">
        
        <activity
            android:name=".PluginActivity"
            android:label="@string/title_activity_kdmain"
            android:exported="true"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="org.prowl.torque.ACTIVITY_PLUGIN"/>
                <action android:name="org.prowl.torque.PID_PLUGIN"/>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
